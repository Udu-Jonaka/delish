<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/styles/style.css">
    <%- include('partials/head') %>
    <style>
    /* Reset some default styles */
    @media (min-width: 1000px) {
      .hero{
        background-attachment: fixed;
      }
      }
    @media (max-width: 1023) {
      .hero{
        min-height: 400px;
      }
    }
    @media (max-width: 990px) {
      .about{
        padding: 20px;
      }
    }
    @media (max-width: 800px) {
      .hero h1 {
        font-size: 2.5rem;
      }
      .about-items {
        flex-direction: column-reverse;
        align-items: center;
        gap: 1.5rem;
      }
      .about-text {
        text-align: justify;
        margin: 0;
      }
      .why-cards {
        gap: 1rem;
      }
    }
    @media (max-width: 700px) {
      .why-cards {
        flex-direction: column;
        align-items: center;
      }
      .divider {
        display: none;
      }
      .why-card {
        max-width: 90vw;
        width: 100%;
      }
      .menu {
        padding: 30px;
      }
      .menu-items{
        display: flex;
        flex-direction: column;
        justify-content: space-evenly;
        align-items: center;
      }
      .menu-card{
        width: 300px;
      }
    }

    @media (max-width: 500px) {
      .about-img img {
        width: 90vw;
      }
    }
        @media (max-width: 768px) {
            .card {
                min-width: 280px;
            }

            .card-image {
                height: 150px;
            }

            .card-content {
                padding: 20px;
            }

            .card-title {
                font-size: 22px;
            }

            .stat-number {
                font-size: 24px;
            }

            .control-btn {
                width: 40px;
                height: 40px;
                font-size: 20px;
            }
        }

        @media (max-width: 480px) {
            .card {
                min-width: 250px;
            }

            .carousel-track {
                gap: 20px;
            }
        }
@media (max-width: 767px) {   
    .card {
        max-width: 320px;
    }
    
    .card-image {
        height: 150px;
    }
    
    .card-content {
        padding: 10px;
    }
    
    .card-title {
        font-size: 22px;
        margin-bottom: 10px;
    }
    
    .stat-number {
        font-size: 24px;
    }
    
    .stat-label {
        font-size: 11px;
    }
}
@media (max-width: 575px) {
    .card {
        width: 250px;
    }
    
    .card-image {
        height: 200px;
    }
    
    .card-content {
        padding: 20px;
    }
    
    .card-title {
        font-size: 24px;
    }
    
    .stat-number {
        font-size: 28px;
    }
    
    .card-stats {
        gap: 15px;
    }
}

/* Extra small devices (up to 375px) */
@media (max-width: 375px) {
    .card-image {
        height: 180px;
    }
    
    .card-content {
        padding: 15px;
    }
    
    .card-title {
        font-size: 20px;
        letter-spacing: 1px;
    }
    
    .stat-number {
        font-size: 24px;
    }
    
    .stat-label {
        font-size: 10px;
    }
}
    </style>
</head>
<body>
<%- include('partials/navbar', { showOrderButton: true }) %>

<!---------HERO--------->
    <section id="hero">
        <div class="hero">
            <h1>Savor The Flavor</h1>
            <a href="/menu" class="hero-button">View Menu</a>
        </div>
    </section>
<!---------ABOUT--------->
    <section id="about" class="about">
      <h1>ABOUT US</h1>
      <div class="about-items">
      <div class="about-img">
        <img src="/images/about.png" alt="">
      </div>
      <div class="about-text">
        <p><span class="nav-logo">Delish</span> was born from a desire to bring <strong>Authentic, Satisfying and Complete Meals</strong> directly to your table. <br>
        We believe great food starts with the freshest ingredients, prepared daily with genuine passion and care. <br>
        Every meal, is crafted to deliver the perfect balance of flavor and excellent value</p>
      </div>
      </div>
    </section>
<!---------MENU--------->
<section id="menu" class="menu">
  <h1>VIEW OUR BEST SELLERS</h1>
    <div class="carousel-container">
        <div class="carousel-wrapper">
            <div class="carousel-track" id="carouselTrack">
                <div class="card">
                    <img src="/images/Pasta.png" class="card-image">
                    <div class="card-content">
                        <h2 class="card-title">Pasta</h2>
                        <div class="card-stats">
                            <div class="stat">
                                <a href="" class="stat-number">Place Order</a>
                                <a href="" class="stat-label" data-image="/images/Pasta.png">Live Preview</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <img src="/images/beef-curry.png" class="card-image">
                    <div class="card-content">
                        <h2 class="card-title">Beef Curry</h2>
                        <div class="card-stats">
                            <div class="stat">
                                <a href="" class="stat-number">Place Order</a>
                                <a href="" class="stat-label" data-image="/images/beef-curry.png">Live Preview</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <img src="/images/noodles.png" class="card-image">
                    <div class="card-content">
                        <h2 class="card-title">Stir-fry Noodles</h2>
                        <div class="card-stats">
                            <div class="stat">
                                <a href="" class="stat-number">Place Order</a>
                                <a href="" class="stat-label" data-image="/images/noodles.png">Live Preview</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="carousel-controls">
                <button class="control-btn" id="prevBtn">‹</button>
                <button class="control-btn" id="nextBtn">›</button>
            </div>
        </div>

        <div class="carousel-dots" id="carouselDots"></div>
    </div>
    <div id="imgModal" class="modal">
        <a href="javascript:void(0)" class="close">&times;</a>
        <img class="modal-content" id="modalImage">
    </div>
    <div class="menu-btn"><a href="/menu" class="menu-button">View Menu</a></div>
</section>
<!---------WHY--------->
    <section id="why">
    <div class="why">
      <h1>WHY CHOOSE US</h1>
      <div class="why-cards">
      <div class="why-card">
        <i class="fa-solid fa-utensils"></i>
        <p>FRESH</p>
        <p>INGREDIENTS</p>
      </div>
      <div class="divider"></div>
      <div class="why-card">
        <i class="fa-solid fa-clock"></i>
        <p>FAST FOOD</p>
        <p>PRE-ORDER</p>
      </div>
      <div class="divider"></div>
      <div class="why-card">
        <i class="fa-solid fa-bell"></i>
        <p>RELIABLE</p>
        <p>DELIVERY</p>
      </div>
      </div>
    </div>
    </section>
    <%- include('partials/footer') %>
    <button id="theme-toogle" class="theme-toogle">
      <i class="fas fa-moon"></i>
    </button>
    <script src="/JS/script.js"></script>
</body>
</html>