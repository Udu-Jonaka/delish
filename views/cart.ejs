<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/styles/cart.css">
    <%- include('partials/head') %>
    <link rel="stylesheet" href="/media query/cart-media.css">
</head>
<body>
<%- include('partials/navbar', { showOrderButton: false }) %>

<section id="header">
    <h1>Your Cart</h1>
</section>

<section class="cart-section">
    <% if(cart.items.length === 0) { %>
        <p>Your cart is empty.</p>
    <% } else { %>
        <table class="cart-table">
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Price (₦)</th>
                    <th>Quantity</th>
                    <th>Subtotal (₦)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% let total = 0; %>
                <% cart.items.forEach(ci => { %>
                    <% let subtotal = ci.item.price * ci.quantity; total += subtotal; %>
                    <tr>
                        <td><%= ci.item.name %></td>
                        <td><%= ci.item.price %></td>
                        <td><%= ci.quantity %></td>
                        <td><%= subtotal %></td>
                        <td>
                            <form action="/cart/increase" method="POST" style="display:inline">
                                <input type="hidden" name="itemId" value="<%= ci.item._id %>">
                                <button>+</button>
                            </form>
                            <form action="/cart/decrease" method="POST" style="display:inline">
                                <input type="hidden" name="itemId" value="<%= ci.item._id %>">
                                <button>-</button>
                            </form>
                            <form action="/cart/remove" method="POST" style="display:inline">
                                <input type="hidden" name="itemId" value="<%= ci.item._id %>">
                                <button>Remove</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
                <tr>
                    <td colspan="3"><strong>Total</strong></td>
                    <td colspan="2"><strong>₦<%= total %></strong></td>
                </tr>
            </tbody>
        </table>
    <% } %>
</section>

    <%- include('partials/footer') %>
    <button id="theme-toogle" class="theme-toogle">
      <i class="fas fa-moon"></i>
    </button>
<script src="/JS/cart.js"></script>
</body>
</html>
