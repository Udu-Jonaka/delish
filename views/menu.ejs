<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/styles/menu.css">
    <%- include('partials/head') %>
    <style>
    @media (max-width: 1199px) {
    .menu-container {
        gap: 20px;
    }
    
    .card {
        width: 300px;
    }
}

@media (max-width: 991px) {
    .menu-container {
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
    }
    
    .card-image {
        height: 240px;
    }
    
    .card-content {
        padding: 25px;
    }
    
    .card-title {
        font-size: 24px;
    }
    
    .stat-number {
        font-size: 28px;
    }
}

@media (max-width: 767px) {
    #menu {
        margin-top: 20px;
        padding: 15px;
    }
    
    .menu-container {
        gap: 16px;
    }
    
    .card {
        max-width: 320px;
    }
    
    .card-image {
        height: 150px;
    }
    
    .card-content {
        padding: 10px;
    }
    
    .card-title {
        font-size: 22px;
        margin-bottom: 10px;
    }
    
    .stat-number {
        font-size: 24px;
    }
    
    .stat-label {
        font-size: 11px;
    }
}
@media (max-width: 575px) {
    #menu {
        padding: 10px;
    }
    
    .menu-container {
        grid-template-columns: 1fr;
        gap: 20px;
    }
    
    .card {
        width: 300px;
    }
    
    .card-image {
        height: 200px;
    }
    
    .card-content {
        padding: 20px;
    }
    
    .card-title {
        font-size: 24px;
    }
    
    .stat-number {
        font-size: 28px;
    }
    
    .card-stats {
        gap: 15px;
    }
}

/* Extra small devices (up to 375px) */
@media (max-width: 375px) {
    .card-image {
        height: 180px;
    }
    
    .card-content {
        padding: 15px;
    }
    
    .card-title {
        font-size: 20px;
        letter-spacing: 1px;
    }
    
    .stat-number {
        font-size: 24px;
    }
    
    .stat-label {
        font-size: 10px;
    }
}
    </style>
</head>
